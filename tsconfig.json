{
    "compilerOptions": {
        "sourceMap": true,
        "strict": true,
        "jsx": "react",
        "typeRoots": [
            "node_modules/@types",
            "src/kintone-packages/types/kintone.d.tsx"
        ],
        "baseUrl": "./",
        "paths": {
          "@kintone-packages/*": ["./src/kintone-packages/*"],
        },
        "noImplicitAny": false,
        "allowSyntheticDefaultImports": true,
        "lib": [
            "ES2021",
            "DOM"
        ],
        "declaration": true,
    },
    "include": [
        "./src/**/*.ts",
        "./src/**/*.tsx",
    ],
}