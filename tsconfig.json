{
    "compilerOptions": {
        "baseUrl": "./src",
        "target": "ESNext",
        "lib": [
            "DOM"
        ],
        "module": "ESNext",
        "moduleResolution": "Node",
        "declaration": true,
        "outDir": "dist",
        "jsx": "react",
        "typeRoots": [
            "node_modules/@types",
            "src/kintone-packages/types/kintone.d.tsx"
        ],
        "noImplicitAny": false,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "strict": true,
    },
    "include": [
        "./**/*.ts",
        "./**/*.tsx",
    ],
}